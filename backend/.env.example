# PostgreSQL Database Configuration
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=quizzy
POSTGRES_HOST=localhost

# Database URL (used by Drizzle)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/quizzy

# MongoDB Configuration
# MONGO_ROOT_USER=mongodb
# MONGO_ROOT_PASSWORD=mongodb
# MONGO_INITDB_DATABASE=quizzy

# MONGODB_URI=mongodb://mongodb:mongodb@localhost:27017/quizzy?authSource=admin

# CORS Configuration for the React Admin Panel
TRUSTED_ORIGINS=http://localhost:3000

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# MinIO S3 Configuration
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin123
S3_BUCKET=quizzy-images

# Database Seeding Configuration

# Exclude specific users from being deleted during seeding (comma-separated emails)
# These users and ALL their related data (quizzes, posts, follows, etc.) will be preserved
EXCLUDE_USERS=admin@example.com,user@example.com

# Core seed counts (required) - other counts are derived from these
SEED_USERS_COUNT=50
SEED_COLLECTIONS_COUNT=30
SEED_QUIZZES_COUNT=100
SEED_QUESTIONS_COUNT=500
SEED_POSTS_COUNT=200

# Derived counts (automatically calculated):
# - SEED_QUIZ_SNAPSHOTS_COUNT = QUIZZES * 1.5
# - SEED_QUESTIONS_SNAPSHOTS_COUNT = QUESTIONS * 1.5  
# - SEED_GAME_SESSIONS_COUNT = QUIZZES * 2
# - SEED_GAME_PARTICIPANTS_COUNT = SESSIONS * 5
# - SEED_SAVED_QUIZZES_COUNT = QUIZZES * 3
# - SEED_POST_LIKES_COUNT = POSTS * 2.5
