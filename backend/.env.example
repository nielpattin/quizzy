# PostgreSQL Database Configuration
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=quizzy
POSTGRES_HOST=localhost

# Database URL (used by Drizzle)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/quizzy

# MongoDB Configuration
# MONGO_ROOT_USER=mongodb
# MONGO_ROOT_PASSWORD=mongodb
# MONGO_INITDB_DATABASE=quizzy

# MONGODB_URI=mongodb://mongodb:mongodb@localhost:27017/quizzy?authSource=admin

# CORS Configuration for the React Admin Panel
TRUSTED_ORIGINS=http://localhost:3000

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-here

# Database Seeding Configuration (Optional)

# Exclude specific users from being deleted during seeding (comma-separated emails)
# These users and ALL their related data (quizzes, posts, follows, etc.) will be preserved
# EXCLUDE_USERS=admin@example.com,user@example.com

# Customize the number of records generated for each table
# SEED_USERS_COUNT=50
# SEED_COLLECTIONS_COUNT=30
# SEED_QUIZZES_COUNT=100
# SEED_QUESTIONS_COUNT=500
# SEED_QUIZ_SNAPSHOTS_COUNT=150
# SEED_QUESTIONS_SNAPSHOTS_COUNT=750
# SEED_GAME_SESSIONS_COUNT=200
# SEED_GAME_PARTICIPANTS_COUNT=1000
# SEED_SAVED_QUIZZES_COUNT=300
# SEED_POSTS_COUNT=200
# SEED_POST_LIKES_COUNT=500
# SEED_COMMENTS_COUNT=400
# SEED_COMMENT_LIKES_COUNT=300
# SEED_FOLLOWS_COUNT=500
# SEED_NOTIFICATIONS_COUNT=1000
